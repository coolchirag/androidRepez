<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android" android:insetLeft="1px" android:insetRight="1px" android:insetTop="0px" android:insetBottom="1px">
    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient android:startColor="@color/base_start_color_pressed" android:endColor="@color/base_end_color_pressed" android:angle="270.0" />
                <corners android:radius="11dp" />
            </shape>
        </item>
        <item>
            <shape>
                <stroke android:width="1px" android:color="@color/rounded_container_border" />
                <gradient android:startColor="@color/base_start_color_default" android:endColor="@color/base_end_color_default" android:angle="270.0" />
                <corners android:radius="10dp" />
            </shape>
        </item>
    </selector>
</inset>
